---
import BaseHead from "components/BaseHead.astro";
import Header from "components/Header.astro";
import Footer from "components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main class="px-6 py-2 h-[90vh] flex flex-col">
      <section class="m-auto text-center">
        <h1 class="text-7xl font-black text-orange-500">FBCS architecture</h1>
        <i> for building service oriented scalable next/react application</i>
        <div
          class="mt-6 rounded-md bg-red-200 w-fit mx-auto text-2xl overflow-hidden"
        >
          <a
            class="px-6 py-4 inline-block text-white bg-orange-500 hover:text-slate-100"
            href="https://github.com/anandubabu-kr/fbcs-architecture/tree/nextjs-demo"
            target="_blank"
            rel="noopener noreferrer">NextJs Demo</a
          >
          <a
            class="px-6 py-4 inline-block bg-slate-200"
            href="/docs/get-started"
            rel="noopener noreferrer">Get Started</a
          >
        </div>
      </section>
      <section>
        <article class="flex flex-col md:flex-row">
          <div class="flex flex-col w-full text-center bg-slate-100 mx-2 py-4">
            <h1 class="text-2xl font-bold">Features</h1>
          </div>
          <div class="flex flex-col w-full text-center bg-slate-100 mx-2 py-4">
            <h1 class="text-2xl font-bold">Services</h1>
          </div>
          <div class="flex flex-col w-full text-center bg-slate-100 mx-2 py-4">
            <h1 class="text-2xl font-bold">Components</h1>
          </div>
        </article>
      </section>
    </main>
    <Footer />
  </body>
</html>
