---
import type { CollectionEntry } from "astro:content";
import BaseHead from "components/BaseHead.astro";
import Header from "components/Header.astro";
import Footer from "components/Footer.astro";
import Sidebar from "components/Sidebar.astro";
import "styles/docs-styles.css";
import InternalLinks from "components/InternalLinks.astro";

type Props = CollectionEntry<"docs">["data"];

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={` FBCS | ${title}`} description={description} />
  </head>

  <body>
    <Header />
    <main class="flex w-full h-[90vh]">
      <Sidebar />
      <article class="h-[90vh] w-full overflow-y-scroll px-4 md:px-12 pt-6">
        <div class="hero-image"></div>
        <div class="prose">
          <div class="title">
            <h1 class="font-bold text-orange-500">{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
      <InternalLinks />
    </main>
    <Footer />
  </body>
</html>
